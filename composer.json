{
	"name": "your-vendor/azure-insights-handler-for-monolog",
	"description": "Azure Application Insights handler integration for Monolog (WordPress).",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=8.2",
		"monolog/monolog": "^2.9",
		"yahnis-elsts/plugin-update-checker": "^5.6"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.6"
	},
	"autoload": {
		"psr-4": {
			"AzureInsightsMonolog\\": "src/",
			"AzureInsightsMonolog\\Tests\\": "tests/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"AzureInsightsMonolog\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit"
	}
}